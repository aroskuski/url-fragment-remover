{

	"manifest_version": 2,
	"name": "URL Fragment Remover",
	"icons": {
		"48": "icon/icon48.png",
		"96": "icon/icon96.png"
	},

	"applications": {
		"gecko": {
			"id": "url-fragment-remover@aroskuski"
		}
	},
	"version": "1.0",

	"description": "Can remove the fragment portion of a URL without reloading the page",

	"permissions": [
		"tabs",
		"activeTab"
	],

	"page_action": {
		"default_title": "Remove URL Fragment",
		"default_icon": {
			"19": "icon/icon19.png",
			"38": "icon/icon19.png"
		}
	},

	"background": {
		"scripts": ["ui.js"]
	}

}
